{
    "configurations": [
        {
            "name": "Launch QtSampleApp",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceRoot}/build/bin/QtSampleApp",
            "args": [],
            "environment": [
                {"name": "MALLOC_CHECK_", "value": "2"}
            ],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "externalConsole": false,
            "stopAtEntry": false
        }
    ]
}
